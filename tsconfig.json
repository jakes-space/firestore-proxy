{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "rootDir": "src",
    "outDir": "dist",
  },
  "include": [
    "src/**/*.ts"
  ],
  "overrides": [
    {
      "include": [
        "**/__tests__/*.ts"
      ],
      "compilerOptions": {
        "types": [
          "jest"
        ]
      },
    }
  ]
}