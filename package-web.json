{
  "name": "firetender",
  "displayName": "Firetender",
  "description": "Typescript wrapper for Firestore documents",
  "version": "0.10.0",
  "author": "Jake Hartman",
  "license": "MIT",
  "homepage": "https://github.com/jakes-space/firetender",
  "repository": {
    "type": "git",
    "url": "https://github.com/jakes-space/firetender.git"
  },
  "keywords": [
    "firestore",
    "typescript",
    "schema"
  ],
  "types": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "/dist",
    "/src/*.ts"
  ],
  "scripts": {
    "use-admin-firestore": "cp package-admin.json package.json && cp src/firestore-deps-admin.ts src/firestore-deps.ts && npm install",
    "use-web-firestore": "echo Already using web firestore.",
    "diff-web-admin": "diff package-web.json package-admin.json",
    "lint:check": "eslint src --ext .ts",
    "lint:fix": "eslint --fix src --ext .ts",
    "prettier:check": "prettier --check src/*.ts src/**/*.ts",
    "prettier:fix": "prettier --write src/*.ts src/**/*.ts",
    "check": "npm run lint:check && npm run prettier:check",
    "fix": "npm run lint:fix && npm run prettier:fix",
    "emulate-db": "firebase emulators:start --project=firetender",
    "test": "jest --forceExit --detectOpenHandles",
    "prepare": "husky install",
    "clean": "rm -rf dist/*",
    "build": "npm run clean && tsc && rm -rf dist/__tests__",
    "prepublishOnly": "npm run check && npm run test && npm run build"
  },
  "dependencies": {
    "firebase": "9.17.0",
    "zod": "^3.20.6"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^2.0.7",
    "@rushstack/eslint-patch": "^1.2.0",
    "@types/jest": "^29.4.0",
    "@typescript-eslint/eslint-plugin": "^5.54.0",
    "@typescript-eslint/parser": "^5.54.0",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-import-resolver-typescript": "^3.5.3",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "firebase-admin": "^11.6.0",
    "husky": "^8.0.3",
    "jest": "^29.4.3",
    "prettier": "^2.8.4",
    "ts-jest": "^29.0.5",
    "tslib": "^2.5.0",
    "typescript": "^4.9.5"
  }
}
